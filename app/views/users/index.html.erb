<div class="col-md-6 col-md-offset-3">
	<h3 class="text-center">ユーザー一覧</h3>
	<section>
		<%= link_to 'ユーザー追加', new_user_path, class: "btn btn-success col-xs-4 col-xs-offset-4" %>
	</section>
	<table class="table col-xs-8 table-condensed">
		<thead>
			<tr>
				<th class="col-xs-2">社員番号</th>
				<th class="col-xs-5">名前</th>
				<th class="col-xs-3">管理者</th>
				<th class="col-xs-2">操作</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
			<tr>
				<td><%= user.worker_id %></td>
				<td><%= user.name %></td>
				<td><%= user.admin %></td>
				<td>
					<%= link_to '編集', edit_user_path(user), class: "btn btn-primary" %>
					<%= link_to '削除', user, method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger" %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<br>
</div>