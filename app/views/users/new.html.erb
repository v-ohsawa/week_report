<h4 class="text-center">新規ユーザー登録</h4>

<div class="row">
	<div class="text-center col-md-4 col-md-offset-4">
		<%= form_for(@user) do |f| %>
		<%= render 'error_messages' %>
		<%= f.label :worker_id, "社員番号" %>
		<%= f.text_field :worker_id, class: "form-control text-center text-center" %>
		<%= f.label :name, "名前" %>
		<%= f.text_field :name, class: "form-control text-center" %>
		<%= f.label :password, "パスワード" %>
		<%= f.password_field :password, class: "form-control text-center" %>
		<%= f.label :password_confirmation, "パスワード確認" %>
		<%= f.password_field :password_confirmation, class: "form-control text-center" %>
		<%= f.submit "作成", class: "btn btn-lg btn-primary col-xs-12 m-bottom m-top" %>
	<% end %>
	</div>
	<div class="text-center col-md-4 col-md-offset-4">
		<%= link_to '戻る', users_path, class: "btn btn-lg btn-danger col-xs-12 m-bottom" %>
	</div>
</div>
