<div class="text-center">
	<%= form_for(@week_report) do |f| %>
		<% if @week_report.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(@week_report.errors.count, "error") %> prohibited this week_report from being saved:</h2>
				<ul>
					<% @week_report.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>

		<div class="form-group col-md-4 col-md-offset-4">
			<%= f.label :プロジェクト %>
			<%= f.collection_select :project_id, Project.all.order(:code), :id, :project_id_and_name, {:include_blank => "全てのプロジェクト",:selected => @project},{class: "form-control"} %>
		</div>
		<div class="form-group col-md-6 col-md-offset-3">
			<%= f.label :やったこと %>
			<%= f.text_area :done, :rows => "8", class: "form-control" %>
		</div>
		<div class="form-group col-md-6 col-md-offset-3">
			<%= f.label :わかったこと %>
			<%= f.text_area :understood, :rows => "8", class: "form-control" %>
		</div>
		<div class="form-group col-md-6 col-md-offset-3">
			<%= f.label :つぎやること %>
			<%= f.text_area :next, :rows => "8", class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.hidden_field :start_day, value: @start_day %>
		</div>
		<div class="form-group">
			<%= f.hidden_field :end_day, value: @end_day %>
		</div>
		<div class="actions col-xs-12">
			<%= f.submit "完了", class: "btn btn-primary btn-lg col-xs-6 col-xs-offset-3  m-top m-bottom" %>
			<%= link_to "取消", {controller:"week_reports", action:"index", date:@dt, name:'new'}, class:"btn btn-danger btn-lg col-xs-6 col-xs-offset-3 m-bottom" %>
		</div>
	<% end %>
</div>
