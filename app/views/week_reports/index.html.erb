<div class="row">
	<div class="col-xs-12">
		<section class="text-center">
			<%= render 'user_info' %>
		</section>
		<section class="text-center col-xs-12 m-bottom">
			<%= render 'week_display' %>
		</section>
		<section>
			<h4 class="text-center">
				<%= link_to "次週",{controller:"week_reports", action:"change_week",start:@start_day - 1.week}, class: "btn btn-info col-xs-1 col-xs-offset-2" %>
				<%= link_to "追加",{controller:"week_reports", action:"new", start:@start_day},class: "btn btn-success col-xs-4 col-xs-offset-1 m-bottom" %>
				<%= link_to "先週",{controller:"week_reports", action:"change_week",start:@start_day + 1.week}, class: "btn btn-info col-xs-1 col-xs-offset-1" %>
			</h4>
		</section>
		<!--週報の中身が出力されます-->
		<table class="table col-xs-12">
			<thead>
				<tr>
					<th class="col-xs-2">プロジェクト</th>
					<th class="col-xs-3">やったこと</th>
					<th class="col-xs-3">わかったこと</th>
					<th class="col-xs-3">つぎやること</th>
					<th class="col-xs-1">操作</th>
				</tr>
			</thead>
			<tbody>
			<%= render partial: 'report' %>
			</tbody>
		</table>
	</div>
</div>